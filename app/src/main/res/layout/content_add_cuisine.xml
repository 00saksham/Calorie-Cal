<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dawn.caloriecal.AddCuisineActivity"
    tools:showIn="@layout/activity_add_cuisine">

    <TextView
        android:id="@+id/content_add_cuisine_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Cuisine"
        android:textSize="34sp"
        android:gravity="center"
        android:layout_marginTop="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="32dp"
        />

    <EditText
        android:id="@+id/content_add_cuisine_cuisine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_below="@id/content_add_cuisine_heading"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="75dp"
        android:textSize="26dp"
        android:hint="Cuisine "

        />
</RelativeLayout>
