<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dawn.caloriecal.AddMealActivity"
    tools:showIn="@layout/activity_add_meal"
    android:background="@android:color/background_light">

    <Spinner
        android:id="@+id/content_add_meal_spinner_meal_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

    </Spinner>

    <Spinner

        android:id="@+id/content_add_meal_spinner_meal_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_add_meal_spinner_meal_time"
        android:layout_marginTop="16dp">

    </Spinner>

    <TextView
        android:id="@+id/content_add_meal_select_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_add_meal_spinner_meal_items"
        android:layout_marginTop="24dp"
        android:text="Select Quantity"
        android:textSize="24sp" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_add_meal_select_text"
        android:layout_marginTop="24dp">

        <RadioButton
            android:id="@+id/radio_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 gm"
            android:paddingLeft="24dp"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radio_two"
            android:layout_marginTop="16dp"
            android:paddingLeft="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200 gm"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radio_three"
            android:layout_marginTop="16dp"
            android:paddingLeft="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300 gm"
            android:textSize="20sp" />
    </RadioGroup>
</RelativeLayout>
