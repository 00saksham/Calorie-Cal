<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dawn.caloriecal.AddFoodItemsActivity"
    tools:showIn="@layout/activity_add_food_items">

    <EditText
        android:id="@+id/content_add_food_items_food_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="75dp"
        android:hint="Food name"
        android:textSize="24dp" />


    <Spinner
        android:id="@+id/content_add_food_items_add_cuisine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_add_food_items_food_name"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"></Spinner>


    <EditText
        android:id="@+id/content_add_food_itens_food_calories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_add_food_items_add_cuisine"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"
        android:hint="Calories"
        android:textSize="24dp"
        android:inputType="number"
        />

</RelativeLayout>
