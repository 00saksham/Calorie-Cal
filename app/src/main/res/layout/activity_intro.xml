<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.dawn.caloriecal.IntroActivity">

    <TextView
        android:id="@+id/activity_intro_get_started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Let's get started.."
        android:textSize="34sp" />

    <EditText
        android:id="@+id/activity_intro_your_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_intro_get_started"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="100dp"
        android:hint="Your name"
        android:textSize="24sp"

        />

    <EditText
        android:inputType="number"
        android:id="@+id/activity_intro_preferred_calories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_intro_your_name"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="25dp"
        android:hint="Preferred calories intake"
        android:textSize="24sp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="START"
        android:onClick="initializeMethod"
        />
</RelativeLayout>
