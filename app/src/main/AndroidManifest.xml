<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dawn.caloriecal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".IntroActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:noHistory="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BreakfastActivity"
            android:label="BreakfastActivity"

            android:theme="@style/AppTheme" />
        <activity
            android:name=".AddMealActivity"
            android:label="@string/title_activity_add_meal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LunchActivity"
            android:label="@string/title_activity_lunch"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DinnerActivity"
            android:label="@string/title_activity_dinner"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FoodItemsActivity"
            android:label="@string/title_activity_food_items"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CuisineItemsActivity"
            android:label="@string/title_activity_cuisine_items"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddFoodItemsActivity"
            android:label="@string/title_activity_add_food_items"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddCuisineActivity"
            android:label="@string/title_activity_add_cuisine"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>